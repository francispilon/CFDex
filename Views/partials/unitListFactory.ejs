      <div class="row" >
    <% } %>
    <a href= <%- "/unit/" + units[i].ID %> class="col-xs-12 col-sm-6 col-lg-3 link-unit-deco" style="margin: 1em 0;">
        <div <%- "class=\"" + units[i].color.toLowerCase() + "Unit card\"" %> style="width: 100%; min-height: 100%;">
        <div class="card-body">
          <h5 class="card-title"><%= units[i].name %></h5>
    <p class="card-text">
              <% for(var j = 0; j < units[i].rarity; ++j) { %>
                ‚≠ê
              <% } %>
            </p>
          <h6 class="card-subtitle mb-2 text-muted">Unit ID: <%= units[i].ID %></h6>
        </div>
      </div>
    </a>
    <% if( i % 4 == 3) { %>
